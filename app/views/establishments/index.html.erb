

<h1>Estabelecimentos</h1>
<form class="navbar-form navbar-left" role="search">
      <div class="form-group">
          <input type="text" name ="name" id="name" class="form-control" placeholder="Localizar...">
      </div>
      <button type="submit" class="btn btn-default">Consultar</button>
</form>
<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Estabelecimento</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @establishments.each do |establishment| %>
      <tr>
        <td><%= image_tag(establishment.avatar.url(:thumb))%></td>
        <td><%= establishment.name %></td>
        <td><%= establishment.city %></td>
        <td><%= establishment.state %></td>
        <td><%= link_to 'Visualizar',  establishment_menus_path(establishment.id), :class => "btn btn-success"%></td>
        <td><%= link_to 'Editar', edit_establishment_path(establishment), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Remover', establishment, method: :delete, data: { confirm: 'Tem certeza que deseja remover ?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Novo Estabelecimento', new_establishment_path  %>
