<p id="notice"><%= notice %></p>

<h1>Listing States</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Uf</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td><%= state.uf %></td>
        <td><%= state.country.name %></td>
        <td><%= link_to 'Visualizar', state %></td>
        <td><%= link_to 'Editar', edit_state_path(state) %></td>
        <td><%= link_to 'Remover', state, method: :delete, data: { confirm: 'Tem certeza que deseja remover?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

